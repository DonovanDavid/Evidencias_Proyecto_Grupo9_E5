@page
@model Taller.App.Front.Pages.EditarMecanicoModel
@{
}
<a class="btn btn-warning" asp-area="" asp-page="/GestionMecanico/GestionMecanico">Regresar</a>
<div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Formulario - Editar Mecánico</h5>
        
      </div>
      <form class="px-12" method="POST">
      <div class="modal-body">
      
      <div class="row">
        <div class="mb-3 col-6">
        <label for="recipient-name" class="col-form-label">Id:</label>
        <input type="text" class="form-control" placeholder="Ingrese su Identificación" aria-label="Username" aria-describedby="basic-addon1" asp-for="@Model.mecanicoActual.MecanicoId" name="MecanicoId" readonly>
        </div>
        <div class="mb-3 col-6">
        <label for="recipient-name" class="col-form-label">Nombre</label>
        <input type="text" class="form-control" placeholder="Ingrese su Nombre" aria-label="Username" aria-describedby="basic-addon1"asp-for="@Model.mecanicoActual.nombre" name="nombre">
        </div>
      </div>
      <div class="row">
      <div class="mb-3 col-6">
        <label for="recipient-name" class="col-form-label">Teléfono</label>
        <input type="text" class="form-control" placeholder="Ingrese Número de Teléfono" aria-label="Username" aria-describedby="basic-addon1" asp-for="@Model.mecanicoActual.telefono" name="telefono">
        </div>
       <div class="mb-3 col-6">
       <label for="recipient-name" class="col-form-label">Fecha de Nacimiento</label>
       <input type="date" class="form-control" placeholder="" aria-label="Username" aria-describedby="basic-addon1" asp-for="@Model.mecanicoActual.fechaNacimiento" name="fechaNacimiento">
      </div>
    </div>
    <div class="row">
      <div class="mb-3 col-6">
       <label for="recipient-name" class="col-form-label">Dirección</label>
       <input type="text" class="form-control" placeholder="Ingrese Dirección de Residencia" aria-label="Username" aria-describedby="basic-addon1" asp-for="@Model.mecanicoActual.direccion" name="direccion">
      </div>
      <div class="mb-3 col-6">
       <label for="recipient-name" class="col-form-label">Nivel de Estudio</label>
       <select class="form-select" id="inputGroupSelect01" asp-for="@Model.mecanicoActual.nivelEstudio" name="nivelEstudio">
        <option selected>Elegir...</option>
        <option value="Bachiller">Bachiller</option>
        <option value="Técnico">Técnico</option>
        <option value="Tecnólogo">Tecnólogo</option>
        <option value="Profesional">Profesional</option>
      </select>
      </div>
    </div>
    <div class="row">
    <div class="mb-3 col-12">
    <label for="recipient-name" class="col-form-label">Contraseña</label>
    <input type="password" class="form-control" placeholder="Ingrese nueva Contraseña" aria-label="Username" aria-describedby="basic-addon1" asp-for="@Model.mecanicoActual.contrasenia" name="contrasenia">
    </div>
    </div>

      <div class="modal-footer">
        
        <button type="submit" class="btn btn-primary" asp-page-handler="Edit">Actualizar</button>
        
      </div>
      </form>
    </div>
    
  </div>
</div>